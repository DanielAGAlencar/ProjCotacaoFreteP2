@model IEnumerable<ProjCotacaoFreteP2.cotacao>
<div class="form-horizontal">
    <h4>Cotação</h4>
    <hr />
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    <div class="form-group">
        <label class="control-label col-md-2">Id Transportadora</label>
        <div class="col-md-10">
            <input class="form-control" type="text" id="fktransportadora" name="fktransportadora" />
        </div>
    </div>

    <div class="form-group">
        <label class="control-label col-md-2">Dias para Entrega</label>
        <div class="col-md-10">
            <input class="form-control" type="text" id="dias_entrega" name="dias_entrega" />
        </div>
    </div>

    <div class="form-group">
        <label class="control-label col-md-2">Valor</label>
        <div class="col-md-10">
            <input class="form-control" type="text" id="valor" name="valor" />
        </div>
    </div>

    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <a href="#" clss="btn btn-default" onclick="SalvarCotacao();">Add Cotação</a>
        </div>
    </div>
</div>

<input type="hidden" id="idPedido" value="@ViewBag.Pedido" />

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.fktransportadora)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.dias_entrega)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.valor)
        </th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.fktransportadora)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.dias_entrega)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.valor)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.Id })
                @Html.ActionLink("Details", "Details", new { id = item.Id })
                @Html.ActionLink("Delete", "Delete", new { id = item.Id })
            </td>
        </tr>
    }
</table>

